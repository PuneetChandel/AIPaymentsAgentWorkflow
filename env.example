# Database Configuration
POSTGRES_URL=postgresql://username@localhost:5432/dispute_resolution_db

# AWS Configuration
DISPUTE_EVENTS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/YOUR_ACCOUNT_ID/dispute-events
HUMAN_REVIEW_NOTIFICATIONS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/YOUR_ACCOUNT_ID/human-review-notifications

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Vector Database Configuration
CHROMA_DB_PATH=./chroma_db
ANONYMIZED_TELEMETRY=False

# Salesforce Configuration (Token-based)
SALESFORCE_BASE_URL=https://your-instance.develop.my.salesforce.com
SALESFORCE_ACCESS_TOKEN=your-salesforce-access-token-here

# Zuora Configuration (Token-based)
ZUORA_BASE_URL=https://rest.sandbox.na.zuora.com
ZUORA_ACCESS_TOKEN=your-zuora-access-token-here
ZUORA_DEFAULT_PAYMENT_ID=your-zuora-payment-id-here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-test-key-here

# Email Configuration (Gmail SMTP)
GMAIL_EMAIL=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password-here
APPROVER_EMAIL=approver@gmail.com

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development
API_HOST=0.0.0.0
API_PORT=8000

# Logging Configuration
LOG_TO_FILE=true
LOG_TO_CONSOLE=false
LOG_FILE_PATH=logs/workflow.log
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Policy Configuration
AUTO_APPROVE_THRESHOLD=100.00
ESCALATION_TIMEOUT_HOURS=4